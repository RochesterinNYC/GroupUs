:javascript
  $(function () { 
    $('#user-histogram').highcharts({
      chart: {
        type: 'column',
        alignTicks: true
      },
      title: {
        text: 'Messages by User'
      },
      xAxis: {
        categories: #{cutoff = get_cutoff(user_frequencies, 50); user_frequencies.values.collect{|x| format_user_names(x[0]) if x[1] >= cutoff }.compact },
        labels: {
          rotation: -45,
          align: 'right',
          style: {
            fontSize: '13px',
            fontFamily: 'Verdana, sans-serif'
          }
        }
      },
      yAxis: {
        min: 0,
        minTickInterval: 10,
        title: {
          text: '# Messages sent'
        }
      },
      legend: {
        enabled: false
      },
      tooltip: {
        pointFormat: '# Messages sent: <b>{point.y} </b>',
      },
      series: [{
        name: 'Message Frequencies',
        data: #{cutoff = get_cutoff(user_frequencies, 50); user_frequencies.values.collect{|x| x[1] if x[1] >= cutoff }.compact},
        dataLabels: {
          enabled: true,
          color: 'black',
          style: {
            fontSize: '13px',
            fontFamily: 'Verdana, sans-serif'
          }
        }
      }],
      plotOptions: {
        column: {
          pointPadding: 0,
          borderWidth: 0,
          groupPadding: 0,
          shadow: false
        }
      }
    });
  });